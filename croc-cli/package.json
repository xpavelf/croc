{
  "name": "croc",
  "version": "0.0.7",
  "description": "monolithic repository manager",
  "bin": {
    "crocx": "./bin/croc-cli.js",
    "croc": "./bin/croc-es5-cli.js"
  },
  "scripts": {
    "pretest": "npm run lint && npm run build",
    "test": "echo \"No test is available.\"",
    "lint": "eslint --ignore-path .gitignore bin lib ",
    "prebuild": "rm -f bin/croc-es5-cli.js",
    "build": "babel --presets es2015 -o bin/croc-es5-cli.js bin/croc-cli.js",
    "postbuild": "sed -i '1 i\\#!/usr/bin/env node' bin/croc-es5-cli.js && chmod +x bin/croc-es5-cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xpavelf/croc.git"
  },
  "author": "Pavel Fatrdla",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/xpavelf/croc/issues"
  },
  "homepage": "https://github.com/xpavelf/croc#readme",
  "dependencies": {
    "chalk": "~1.1.1",
    "croc-deps": "~0.0.2",
    "croc-exec": "~0.0.2",
    "croc-link": "~0.0.2",
    "croc-list": "~0.0.2",
    "docopt": "~0.6.2",
    "es6-shim": "~0.33.13",
    "text-table": "~0.2.0"
  }
}
